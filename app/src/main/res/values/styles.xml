<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>


    <style name="InformationHeaders"    parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_header_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/headerInfo</item>
        <item name="android:layout_marginTop">12dp</item>

    </style>

    <style name="Information"    parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_info_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">12dp</item>

    </style>

    <style name="Recyclerview_Information"    parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_info_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
