<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <TextView
        style="@style/Recyclerview_Information"
        android:id="@+id/beacon_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/beacon_device_id_text"
        tools:text="Device ID: " />

    <TextView
        style="@style/Recyclerview_Information"
        android:id="@+id/beacon_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/beacon_id"
        tools:text="asmdhkacn4i734o298747"
        />

    <TextView
        style="@style/Recyclerview_Information"
        android:id="@+id/beacon_institution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/beacon_id"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/beacon_institution_text"
        tools:text="Institution: " />

    <TextView
        style="@style/Recyclerview_Information"
        android:id="@+id/beacon_institution_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/beacon_id"
        app:layout_constraintStart_toEndOf="@id/beacon_institution"
        tools:text="Georgia Tech"
        />

    <TextView
        style="@style/Recyclerview_Information"
        android:id="@+id/beacon_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/beacon_institution"
        android:text="@string/beacon_bus_stop_text"
        tools:text="Bus Stop: " />

    <TextView
        style="@style/Recyclerview_Information"
        android:id="@+id/beacon_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/beacon_institution"
        app:layout_constraintStart_toEndOf="@id/beacon_location"
        tools:text="Student Center"
        />


</android.support.constraint.ConstraintLayout>